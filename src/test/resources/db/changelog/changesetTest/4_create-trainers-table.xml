<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="create-trainees" author="IlyaZhizhin">
        <createTable tableName="trainers">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="specialization" type="int">
                <constraints foreignKeyName="training_type_id" />
            </column>
            <column name="user_id" type="int">
                <constraints foreignKeyName="user_id" unique="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

