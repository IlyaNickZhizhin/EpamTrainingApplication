pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    credentialsId: 'git_hub_key',
                    url: 'git@github.com:IlyaNickZhizhin/EpamTrainingApplication.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('Sonar Test') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomacat_dev', path: '', url: 'http://localhost:8081')],
                contextPath: '/opt/tomcat/latest/webapps', war: '**/*.war'
            }
        }

    }
}
